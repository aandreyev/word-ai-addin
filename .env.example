# Word Add-in Environment Variables
# Copy this file to .env and fill in your actual values
# OR use Doppler for secure secrets management: doppler run -- npm start

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Development Configuration
NODE_ENV=development
PORT=3000
APP_URL=https://localhost:3000

# Office Add-in Configuration
OFFICE_ADDIN_HOST=localhost
OFFICE_ADDIN_PORT=3000
OFFICE_ADDIN_DEV_SETTINGS=true

# Security
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=debug

# CORS settings for development
CORS_ORIGIN=https://localhost:3000

# Security settings for development (only for dev)
DISABLE_HTTPS_VERIFICATION=true
